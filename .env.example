# =============================================================================
# Environment Variable Configuration for fibcalc
# =============================================================================
# This file lists all environment variables supported by the application.
# Copy this file to .env and modify the values according to your needs.
#
# Configuration Priority:
#   1. Command line arguments (CLI flags)
#   2. Environment variables (this file)
#   3. Default values
# =============================================================================

# =============================================================================
# Main Configuration
# =============================================================================

# Index n of the Fibonacci number to calculate
# Type: uint64
# Default value: 250000000
FIBCALC_N=250000000

# Algorithm to use for calculation
# Possible values: "all", "fast", "matrix", "fft"
# Type: string
# Default value: "all"
FIBCALC_ALGO=all

# Maximum timeout for calculation
# Format: Go duration (e.g., "5m", "30s", "1h30m")
# Type: duration
# Default value: "5m"
FIBCALC_TIMEOUT=5m

# =============================================================================
# HTTP Server Configuration
# =============================================================================

# Enable HTTP server mode
# Type: bool (true/false, 1/0, yes/no)
# Default value: false
FIBCALC_SERVER=false

# Listening port for server mode
# Type: string
# Default value: "8080"
FIBCALC_PORT=8080

# =============================================================================
# Performance and Parallelism Thresholds
# =============================================================================

# Threshold (in bits) to enable parallelism in multiplications
# Type: int
# Default value: 4096
FIBCALC_THRESHOLD=4096

# Threshold (in bits) to enable FFT multiplication
# Set to 0 to disable FFT
# Type: int
# Default value: 500000
FIBCALC_FFT_THRESHOLD=500000

# Threshold (in bits) to switch to Strassen algorithm in matrix multiplication
# Type: int
# Default value: 3072
FIBCALC_STRASSEN_THRESHOLD=3072

# =============================================================================
# Calibration
# =============================================================================

# Enable calibration mode to determine the optimal parallelism threshold
# Type: bool
# Default value: false
FIBCALC_CALIBRATE=false

# Enable automatic calibration at startup
# May increase load time
# Type: bool
# Default value: false
FIBCALC_AUTO_CALIBRATE=false

# Path to the calibration profile file
# If empty, uses the default path: ~/.fibcalc_calibration.json
# Type: string
# Default value: ""
FIBCALC_CALIBRATION_PROFILE=

# =============================================================================
# Output Options
# =============================================================================

# Enable JSON output
# Type: bool
# Default value: false
FIBCALC_JSON=false

# Display the full result value (can be very long)
# Type: bool
# Default value: false
FIBCALC_VERBOSE=false

# Display performance details and result metadata
# Type: bool
# Default value: false
FIBCALC_DETAILS=false

# Quiet mode - minimal output for scripts
# Suppresses progress bars, banners, and informative messages
# Type: bool
# Default value: false
FIBCALC_QUIET=false

# Display the result in hexadecimal format
# Type: bool
# Default value: false
FIBCALC_HEX=false

# Display the calculated value (disabled by default)
# Type: bool
# Default value: false
FIBCALC_CALCULATE=false

# Output file path to save the result
# Type: string
# Default value: ""
FIBCALC_OUTPUT=

# =============================================================================
# Interface Options
# =============================================================================

# Enable REPL interactive mode
# Type: bool
# Default value: false
FIBCALC_INTERACTIVE=false

# Disable colored output
# Type: bool
# Default value: false
# Note: Also respects the standard NO_COLOR environment variable
FIBCALC_NO_COLOR=false

# =============================================================================
# Standard Environment Variables
# =============================================================================

# Standard environment variable to disable colors
# Used by many CLI applications
# Type: string (any value enables this option)
# Default value: undefined
# NO_COLOR=1
